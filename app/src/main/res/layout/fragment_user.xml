<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_center_text_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#22349c"
        android:gravity="center"
        android:padding="10dp"
        android:text="个人中心"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_center_text_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#3f51b5">

            <ImageButton
                android:id="@+id/user_avatar_image_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/top_image_icon" />

            <TextView
                android:id="@+id/username_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:text="winway"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#eee" />

        <LinearLayout
            android:id="@+id/user_info_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/UserCenterTextStyle"
                android:text="个人信息" />

            <ImageButton
                android:id="@+id/user_info_image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:background="@null"
                android:src="@mipmap/home_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#eee" />

        <LinearLayout
            android:id="@+id/order_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/UserCenterTextStyle"
                android:text="订单列表" />

            <ImageButton
                android:id="@+id/order_image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:background="@null"
                android:src="@mipmap/home_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#eee" />

        <LinearLayout
            android:id="@+id/update_password_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                style="@style/UserCenterTextStyle"
                android:text="修改密码" />

            <ImageButton
                android:id="@+id/update_password_image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:background="@null"
                android:src="@mipmap/home_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#eee" />

        <LinearLayout
            android:id="@+id/advice_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/UserCenterTextStyle"
                android:text="意见反馈" />

            <ImageButton
                android:id="@+id/advice_image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:background="@null"
                android:src="@mipmap/home_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#eee" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="#a3184ff1"
            android:text="退出账号"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

</RelativeLayout>